{
    "extends": [
        ":dependencyDashboard",
        ":semanticPrefixFixDepsChoreOthers",
        ":ignoreModulesAndTests",
        ":autodetectPinVersions",
        "group:monorepos",
        "group:recommended",
        "schedule:nonOfficeHours",
        ":timezone(Asia/Tokyo)"
    ],
    "labels": [
        "A-dependency",
        "I-dependency-gardening"
    ],
    "packageRules": [
        {
            "groupName": "React",
            "matchPackageNames": [
                "react",
                "react-dom"
            ]
        },
        {
            "groupName": "React's d.ts",
            "matchPackageNames": [
                "@types/react",
                "@types/react-dom"
            ]
        },
        {
            "groupName": "babel",
            "matchPackagePatterns": [
                "^@babel/"
            ]
        },
        {
            "groupName": "typescript-eslint",
            "matchPackagePatterns": [
                "^@typescript-eslint/"
            ]
        }
    ]
}
