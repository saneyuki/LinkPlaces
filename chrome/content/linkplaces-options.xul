<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>

<!DOCTYPE prefwindow [
	<!ENTITY % linkplacesDTD SYSTEM "chrome://linkplaces/locale/linkplaces.dtd">
	%linkplacesDTD;
]>
<prefwindow xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
            id="linkplaces-option"
            title="&linkplaces.option.title;">

	<prefpane id="linkplaces-optionPane-general"
	          label="&linkplaces.option.pane.general;">

		<preferences>
			<preference id="extensions.linkplaces.openLinkToWhere"
			            name="extensions.linkplaces.openLinkToWhere"
			            type="int"/>
			<preference id="extensions.linkplaces.focusSidebarWhenItemOpened"
			            name="extensions.linkplaces.focusSidebarWhenItemOpened"
			            type="bool"/>
		</preferences>

		<groupbox id="linkplaces-option-openLinkToWhere">
			<caption label="&linkplaces.option.openLinkToWhere.caption;"/>
			<radiogroup preference="extensions.linkplaces.openLinkToWhere"
			            orient="vertical">
				<radio value="0"
				       label="&linkplaces.option.openLinkToWhere.current;"/>
				<radio value="1"
				       label="&linkplaces.option.openLinkToWhere.tab;"/>
				<radio value="2"
				       label="&linkplaces.option.openLinkToWhere.tabshifted;"/>
				<radio value="3"
				       label="&linkplaces.option.openLinkToWhere.window;"/>
			</radiogroup>
		</groupbox>

		<groupbox id="linkplaces-option-sidebar">
			<caption label="&linkplaces.option.sidebar.caption;"/>
			<checkbox id="linkplaces-option-focusSidebarWhenItemOpened"
			          label="&linkplaces.option.focusSidebarWhenItemOpened;"
			          preference="extensions.linkplaces.focusSidebarWhenItemOpened"/>
		</groupbox>

	</prefpane>

</prefwindow>